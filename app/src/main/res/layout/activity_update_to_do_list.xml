<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpdateToDoList">

        <EditText
            android:id="@+id/ed_todoTile"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:hint="Title"
            app:layout_constraintBottom_toTopOf="@+id/ed_todoContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/ed_todoContent"
            android:layout_width="317dp"
            android:layout_height="509dp"
            android:layout_marginBottom="36dp"
            android:gravity="start"
            android:hint="content"
            android:lines="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="68dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="28dp"
            android:text="Update"
            android:backgroundTint="#83F3A6E0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.973"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ed_todoContent"
            app:layout_constraintVertical_bias="0.983" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>